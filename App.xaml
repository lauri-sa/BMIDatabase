<Application x:Class="BMIDatabase.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BMIDatabase"
             StartupUri="Views/MainWindow.xaml" >
    
    <Application.Resources>
        <Style x:Key="Password">
            <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Resources/#Password"/>
        </Style>
        <ImageSource x:Key="Logo">
            pack://application:,,,/Resources/Logo.png
        </ImageSource>
        <ImageSource x:Key="Delete">
            pack://application:,,,/Resources/incorrect-icon.png
        </ImageSource>
    </Application.Resources>
</Application>
